{
    "editor.parameterHints.enabled": false,
    "editor.rulers": [
        100,
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "rewrap.wrappingColumn": 100,
    "editor.fontLigatures": true,
    "editor.accessibilitySupport": "off",
    "editor.unicodeHighlight.allowedCharacters": {
        "Œ±": true,  "Œ≤": true, "Œ≥": true, "Œì": true,  "Œ¥": true, "Œî": true, "œµ": true,  "Œµ": true,
        "Œ∂": true,  "Œ∑": true, "Œ∏": true, "œë": true,  "Œò": true, "Œπ": true, "Œ∫": true,  "œ∞": true,
        "Œª": true,  "Œõ": true, "Œº": true, "ŒΩ": false, "Œæ": true, "Œû": true, "Œø": false, "œÄ": true, 
        "œñ": true,  "Œ†": true, "œÅ": true, "œ±": true,  "œÉ": true, "Œ£": true, "œÇ": true,  "œÑ": true, 
        "œÖ": false, "œï": true, "œÜ": true, "Œ¶": true,  "œá": true, "œà": true, "Œ®": true,  "œâ": true,
        "Œ©": true,  "ùîº": true,
    },
    "editor.formatOnSave": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.quickSuggestionsDelay": 0,
    "editor.minimap.autohide": "mouseover",
    "terminal.integrated.gpuAcceleration": "on",
    "extensions.ignoreRecommendations": true,
    // Python
    "black-formatter.args": [
        "--line-length",
        "100"
    ],
    // C/C++
    "files.associations": {
        "*.h": "c"
    },
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c99",
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4, TabWidth: 4, ColumnLimit: 119}",
    // Git
    "git.enableSmartCommit": false,
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "never",
    "git.confirmSync": true,
    // Colors and Window
    "window.newWindowDimensions": "offset",
    "workbench.colorCustomizations": {
        "terminal.ansiBlack": "#151515",
        "terminal.ansiBrightBlack": "#505050",
        "terminal.ansiRed": "#a53c23",
        "terminal.ansiBrightRed": "#a53c23",
        "terminal.ansiGreen": "#7b9246",
        "terminal.ansiBrightGreen": "#7b9246",
        "terminal.ansiYellow": "#d3a04d",
        "terminal.ansiBrightYellow": "#d3a04d",
        "terminal.ansiBlue": "#6c99bb",
        "terminal.ansiBrightBlue": "#547c99",
        "terminal.ansiMagenta": "#9f4e85",
        "terminal.ansiBrightMagenta": "#9f4e85",
        "terminal.ansiCyan": "#7dd6cf",
        "terminal.ansiBrightCyan": "#7dd6cf",
        "terminal.ansiWhite": "#d0d0d0",
        "terminal.ansiBrightWhite": "#f5f5f5",
    },
    "workbench.iconTheme": "material-icon-theme",
    "jupyter.interactiveWindow.creationMode": "perFile",
    "remote.autoForwardPortsSource": "hybrid",
    "python.analysis.typeCheckingMode": "standard",
}
